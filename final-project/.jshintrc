{
    // options picked from airbnb .jshintrc:
    // https://github.com/airbnb/javascript/blob/master/linters/.jshintrc

    // allow node globals (process, module, etc.)
    "node": true,

    // allow mocha globals (describe, it, etc.)
    "mocha": true,

    // allow es6
    "esversion": 6,

    // force camelCase or UPPER_CASE variables names
    "camelcase": false,

    // use === and !==
    "eqeqeq": true,

    // prohibit use of a variable before it is defined.
    "latedef": "nofunc",

    // max line length 100 characters
    "maxlen": 100,

    // require capitalized names for constructor functions.
    "newcap": true,

    // prohibit use of explicitly undeclared variables.
    "undef": true
}
